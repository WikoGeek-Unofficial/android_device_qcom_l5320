<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageView
		android:id="@+id/back_key"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="130dip"
		android:layout_marginLeft="280dip"
		android:src="@drawable/back_key"
		android:visibility="visible"/>

    <ListView
		android:id="@+id/phonelistview"
		android:layout_width="205dip"
		android:layout_height="110dip"
		android:layout_marginTop="30dip"
		android:layout_marginLeft="75dip"
		android:visibility="visible">
    </ListView>

    <RelativeLayout
        android:id="@+id/call_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
	android:layout_marginTop="180dip"
	android:gravity="center|top"
	android:visibility="gone">
        <TextView android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFFFF"
            android:singleLine="true"
	    android:ellipsize="end"/>

        <Button
        	android:id="@+id/end_call"
        	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dip"
	        android:layout_marginTop="65dip"
        	android:background="@drawable/end_call"/>

    </RelativeLayout>
</LinearLayout>
